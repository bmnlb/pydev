import os
import sys

# create a list of args
argList = sys.argv
# count loop iterables
print('num of args: '+str(len(argList)-1))
listPos = 0
for n in argList:
    if listPos == 0:
        print('command: '+n)
        listPos += 1
    elif listPos <= 1:
        print('arg #'+str(listPos)+': ',end='')
        if n == '':
            print('empty')
        else:
            print(n)
            listPos += 1
print('Thanks for playing.')
